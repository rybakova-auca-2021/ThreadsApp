<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderTextStyle">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sfbold</item>
    </style>

    <style name="InfoTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/grey_auth</item>
        <item name="android:fontFamily">@font/sfregular</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:fontFamily">@font/sfregular</item>
    </style>

    <style name="DialogTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sfbold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PageNameTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sfbold</item>
    </style>

    <style name="SearchView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#3C3C4399</item>
        <item name="android:background">@drawable/search_view</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:queryHint">Search</item>
    </style>
</resources>

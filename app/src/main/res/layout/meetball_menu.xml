<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:behavior_hideable="true"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="188dp">


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/divider" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_copy_link"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="@string/copy_link"
            android:textAllCaps="false"
            android:drawableTop="@drawable/mdi_link"
            android:paddingTop="10dp"
            android:drawablePadding="-10dp"
            android:background="@drawable/search_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_copy_link2"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/search_view"
            android:drawableTop="@drawable/lucide_share"
            android:drawablePadding="-5dp"
            android:paddingTop="13dp"
            android:text="@string/share_via"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_block"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Block"
            android:textColor="@color/red"
            android:textAllCaps="false"
            android:background="@drawable/search_view"
            app:layout_constraintEnd_toEndOf="@+id/btn_copy_link2"
            app:layout_constraintStart_toStartOf="@+id/btn_copy_link"
            tools:layout_editor_absoluteY="126dp"
            tools:ignore="HardcodedText,MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>